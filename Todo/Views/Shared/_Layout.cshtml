<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/angular.min.js"></script>
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700' rel='stylesheet' type='text/css'>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Todo App</title>

    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/semantic.css" rel="stylesheet" />
    <link href="~/Content/feed.css" rel="stylesheet" />
    <link href="~/Content/main.css" rel="stylesheet" />
</head>
<body id="feed">
    <div class="ui large inverted vertical sidebar menu">
        <a class="item" href="@Url.Action("index", "todo")">
            待辦事項 <span class="ui label">@Html.Action("count", "todo")</span>
        </a>
        <a class="item" href="@Url.Action("archive", "todo")">
            已備份的項目
        </a>
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/semantic.min.js"></script>
    <script src="~/Scripts/feed.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>